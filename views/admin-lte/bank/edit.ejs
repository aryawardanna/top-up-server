<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Bank "<%= bank.name %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama pemilik</label>
                  <input
                    name="name"
                    value="<%= bank.name %>"
                    type="text"
                    class="form-control"
                    id="name"
                    placeholder="Masukan nama pemilik"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Nama bank</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="bankName"
                    value="<%= bank.nameBank %>"
                    required
                  >
                    <option selected="selected">Pilih bank</option>
                    <option value="BNI">BNI</option>
                    <option value="BCA">BCA</option>
                    <option value="BRI">BRI</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="noRekening">Nomor rekening</label>
                  <input
                    name="noRekening"
                    value="<%= bank.noRekening %>"
                    type="number"
                    class="form-control"
                    id="noRekening"
                    placeholder="Masukan nomor rekening pemilik"
                    required
                  />
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
